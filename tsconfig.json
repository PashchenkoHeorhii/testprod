{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "lib": [
      "ES2020",
      "ES2021",
      "dom"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitThis": false,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "allowJs": true,
    "incremental": true,
    "declaration": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "resolveJsonModule": true,
    "paths": {
      "@mongo-models/*": ["src/database/database-factory/mongodb/models/*"],
      "@database-factory/*": ["src/database/database-factory/*"],
      "@utils/*": ["src/utils/*"]
    }
  }
}
